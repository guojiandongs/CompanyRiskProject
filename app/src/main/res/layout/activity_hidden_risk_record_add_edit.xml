<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bar_color"
    android:orientation="vertical"
    tools:context=".activity.HiddenRiskRecordAddEditActivity">

    <include layout="@layout/layout_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="9.67dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clipToPadding="false">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hidden_units_colon"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_hidden_units"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="所属专业："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_professional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="隐患类别："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_hidden_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="隐患类型："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_hidden_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="级&#12288;&#12288;别："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="隐患日期："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_select_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3.33dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="false">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="176dp"
                            android:layout_height="32dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp">

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/blue1"
                                android:textSize="@dimen/normal_ts" />

                            <ImageView
                                android:layout_width="20.67dp"
                                android:layout_height="19dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:src="@mipmap/select_date" />
                        </android.support.v7.widget.LinearLayoutCompat>
                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="隐患时间："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_select_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3.33dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="false">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="176dp"
                            android:layout_height="32dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="16dp">

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/blue1"
                                android:textSize="@dimen/normal_ts" />

                            <ImageView
                                android:layout_width="20.67dp"
                                android:layout_height="19dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:src="@mipmap/select_date" />
                        </android.support.v7.widget.LinearLayoutCompat>
                    </android.support.v7.widget.CardView>

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="班&#12288;&#12288;次："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="检查单位："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_hidden_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="区&#12288;&#12288;域："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_hidden_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="检查内容："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_check_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="附加地点："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3.33dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="false">

                        <EditText
                            android:id="@+id/et_add_location"
                            android:layout_width="176dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:singleLine="true"
                            android:src="@drawable/select_checkbox_blue"
                            android:textColor="@color/blue1"
                            android:textSize="@dimen/normal_ts" />

                    </android.support.v7.widget.CardView>


                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="检查人："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3.33dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="false">

                        <EditText
                            android:id="@+id/et_add_checkPerson"
                            android:layout_width="176dp"
                            android:layout_height="32dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:singleLine="true"
                            android:src="@drawable/select_checkbox_blue"
                            android:textColor="@color/blue1"
                            android:textSize="@dimen/normal_ts" />

                    </android.support.v7.widget.CardView>


                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="督&#12288;&#12288;办："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3.33dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="false">

                        <ImageView
                            android:id="@+id/check_yes"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="5dp"
                            android:src="@drawable/select_checkbox_blue" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="是"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/normal_ts" />

                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3.33dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="false">

                        <ImageView
                            android:id="@+id/check_nos"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="5dp"
                            android:src="@drawable/select_checkbox_blue" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="否"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="处&#8194;理&#8194;否："
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/normal_ts"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_is_handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />
            </android.support.v7.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="隐患内容:"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/normal_ts"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shape_rectangle_rounded_solid_color_ef"
                android:gravity="top"
                android:hint="文字描述..."
                android:minHeight="152dp"
                android:paddingLeft="32dp"
                android:paddingTop="12dp"
                android:paddingRight="32dp"
                android:paddingBottom="12dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/normal_ts" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/layerlist_bottom_bg"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle_solid_blue_stroke_gray"
            android:gravity="center"
            android:text="@string/ok_backspace"
            android:textColor="@color/white"
            android:textSize="@dimen/middle_ts" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bar_color"
    android:orientation="vertical"
    tools:context=".activity.HiddenRiskRecordDetailActivity">

    <include layout="@layout/layout_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="9.67dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clipToPadding="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/blue_rectangle_white_stroke_4dp_corner"
            android:elevation="@dimen/elevation_basic"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="0.67dp"
                android:layout_marginRight="0.67dp"
                android:src="@drawable/layerlist_folding_corner" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:paddingLeft="9dp"
                android:paddingRight="9dp">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/hidden_units_colon"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_hidden_units"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="所属专业"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_professional"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />
                <!--<android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="隐患类别"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_hidden_class"
                        android:layout_width="176dp"
                        android:layout_height="32.67dp"
                        android:background="@drawable/shape_rectangle_rounded_stroke_d5"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>-->

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="录&#8194;入&#8194;人"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_enter_man"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="级&#12288;&#12288;别"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="发现时间"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="班&#12288;&#12288;次"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_order"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="检查单位"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_hidden_sort"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="区&#12288;&#12288;域"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_hidden_area"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="检&#8194;查&#8194;人"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_discoverer"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="处&#8194;理&#8194;否"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_is_handle"
                        android:layout_width="0dp"
                        android:layout_height="32.67dp"
                        android:layout_weight="2"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />
                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:background="@color/white" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="隐患内容"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/et_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:hint="文字描述..."
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_ts" />

                </android.support.v7.widget.LinearLayoutCompat>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    tools:listitem="@layout/item_pic" />
            </android.support.v7.widget.LinearLayoutCompat>
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.v7.widget.LinearLayoutCompat>